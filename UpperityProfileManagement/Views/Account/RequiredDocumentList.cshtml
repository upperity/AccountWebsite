@model UpperityProfileManagement.UpperitySDK.GetUpgradeDocumentTypeListResponse
<div class="row">
    <div class="col-lg-12 col-sm-12" >

            <div class="form-group">
            <label for="documents-table" class="text-info">Upload your business document</label><br>
            @foreach (var docType in Model.UpgradeDocumentTypeList)
            {
                <div class="tg-wrap"><table id="documents-tableType-@docType.DocumentTypeId" class="tg">
                        <tr>
                        <th class="tg-8lax">@docType.DocumentTypeDescription<span class="plus2"><a href="javascript:addDocumentType_@docType.DocumentTypeId.ToString()Row();"><img class="plus" src="/dashboard/assets/plus.png"></a></span></th>
                        <th class="tg-7lax"></th>
                        </tr>
                        <tr>
                        <td class="tg-8lax"><input type="text" name="EntityDocument_1_Type_@docType.DocumentTypeId.ToString()" id="EntityDocument_1_Type_@docType.DocumentTypeId.ToString()" class="form-control"  required></td>
                        <td class="tg-7lax" style="text-align:center;">
                        <input id="fileSelector_@docType.DocumentTypeId.ToString()_1" type="file" name="file_EntityDocument_1_Type_@docType.DocumentTypeId.ToString()" onchange="setFileName(this,'EntityDocument_1_Type_@docType.DocumentTypeId.ToString()');" style="display:none;" required/>
                        <label for="fileSelector_@docType.DocumentTypeId.ToString()_1" class="btn btn-dark2 btn-info btn-lg text-right">Browse</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        </tr>
                    </table>
                </div>
                <script language="javascript" type="text/javascript">
                    function addDocumentType_@docType.DocumentTypeId.ToString()Row() {
                        indexer++;
                        var newRow = '<tr><td class="tg-8lax"><input type="text" name="EntityDocument_' + indexer + '_Type_@docType.DocumentTypeId.ToString()" id="EntityDocument_' + indexer + '_Type_@docType.DocumentTypeId.ToString()" class="form-control" required></td><td class="tg-7lax" style="text-align:center;"><input id="fileSelector_@docType.DocumentTypeId.ToString()_' + indexer + '" type="file" name="file_EntityDocument_' + indexer + '_Type_@docType.DocumentTypeId.ToString()" onchange="setFileName(this,\'EntityDocument_' + indexer + '_Type_@docType.DocumentTypeId.ToString()\');" style="display:none;" required /><label for="fileSelector_@docType.DocumentTypeId.ToString()_' + indexer + '" class="btn btn-dark2 btn-info btn-lg text-right">Browse</label><span onclick="removeCurrentRow(this);"><a href="javascript:removeCurrentRow(this);"><img  class="trash" src="/dashboard/assets/trash.jpg"></a></span></td></tr>';
                        $('#documents-tableType-@docType.DocumentTypeId tbody').append(newRow);
                    }
                </script>
            }
            </div>
        </div>
</div>